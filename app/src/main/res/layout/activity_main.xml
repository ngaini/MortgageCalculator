    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Borrowed Amount"
        android:layout_alignParentLeft="true"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"/>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount_borrowed_editText"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:gravity="center"
        android:text="0.0"
        android:layout_alignParentRight="true"
        android:inputType="numberDecimal|numberSigned"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interestRate_text"
            android:text="Interest Rate"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interestRate_value_text"
            android:layout_marginRight="5dp"
            />
        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interest_rate_seekbar"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:maxHeight="100dp"
            android:max="100"
            android:layout_gravity="center"
            android:progress="50"/>
        </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Term in years"
            android:layout_marginRight="10dp"/>
       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:gravity="center"
           android:id="@+id/term_radioGroup"
           android:checkedButton="@+id/value_7">
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="7"
               android:id="@+id/value_7"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="15"
               android:id="@+id/value_15"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="30"
               android:id="@+id/value_30"/>
           </RadioGroup>


        
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tax_checkBox"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Tax and Insurance"/>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff11ddc9"
        android:background="@android:color/background_dark"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:id="@+id/calculate_button"
        android:onClick="calculateButton"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/result_textView"

        android:textColor="#ffff3e1b"
        android:textSize="15dp"
        android:gravity="center"
        />
</LinearLayout>
